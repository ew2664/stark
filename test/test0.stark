// This file tests the following features:
/*
- Single-line comments
- Multi-line comments
- Print statements
- While loops
- Repeat/until loops
- If statements
- If/else statements
- If/else-if
*/

function main () as int {
    define i as int;
    define j as int;
    define k as int;
    ~i <- 0;
    ~j <- 5;
    ~k <- 10;
    i <- test_while(i);
    j <- test_for(j);
    k <- test_repeat_until(k);
}

function test_while (i as int) as int {
    prints("While Loop");
    while (i < 6) {
        print(i);
        incr i by 1;
    }
    return i;
}

function test_for (j as int) as int {
    prints("For Loop");
    for j from 5 to 1 every -1 {
        print(j);
    }
    j <- 1;
    for j from 1 to 5 every 1 {
        print(j);
    }
    return j;
}

function test_repeat_until (k as int) as int {
    prints("Repeat Until Loop");
    repeat {
        print(k);
        decr k by 2;
    } until k < 0;
    return k;
}